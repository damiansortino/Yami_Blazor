        </AuthorizeView>
        @*Configuracion*@

        <AuthorizeView Roles="Configuracion, Admin">

            <div class="">
                <div class="" id="headingThree">
                    <h5 class="mb-0">
                        <button class="btn text-white py-3 my-1 rounded border-bottom border-dark border-solid categoria text-left" style="width: 100%;text-shadow: 1px 1px 1px #2CACF3;" type="button" data-toggle="collapse" data-target="#configuracion" aria-expanded="false" aria-controls="collapseThree">
                            <strong class="pl-2"> <i class="fas fa-cogs mr-1 text-info" style="font-size:1.3rem;"></i>  CONFIGURACION</strong>
                        </button>
                    </h5>
                </div>
                <div id="configuracion" class="collapse border-right border-info border-solid" style="opacity:0.8; border-right:5px; border-right:5px" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="">
                        <ul class="nav flex-column">
                            <li class="nav-item px-2 py-1">
                                <NavLink class="nav-link py-0" href="producto" Match="NavLinkMatch.All">
                                    <strong><i class="fas fa-cookie-bite mr-2 text-info"></i> Producto</strong>
                                </NavLink>
                            </li>
                            <AuthorizeView Roles="Admin" Context="_context3">
                                <Authorized>
                                    <li class="nav-item px-2 py-1">
                                        <NavLink class="nav-link py-0" href="AumentoDePrecios">
