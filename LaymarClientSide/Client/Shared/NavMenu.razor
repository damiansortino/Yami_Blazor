                                </NavLink>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </AuthorizeView>
        @*Tesoreria*@
        <AuthorizeView Roles="Tesoreria, Admin">

            <div class="">
                <div class="" id="headingThree">
                    <h5 class="mb-0">
                        <button class="btn text-white py-3 my-1 rounded border-bottom border-dark border-solid categoria text-left" style="width:100%;text-shadow: 1px 1px 1px #2CACF3;text-shadow: 1px 1px 1px #2CACF3; " type="button" data-toggle="collapse" data-target="#tesoreria" aria-expanded="false" aria-controls="collapseThree">
